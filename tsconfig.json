{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./test-automation",
    "paths": {
      "@fixtures/*": ["fixtures/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@customTypes/*": ["types/*"]
    },
    "outDir": "./dist",
    "types": ["node", "@playwright/test"],
    "esModuleInterop": true
  },
  "include": ["test-automation/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
